---
import BaseLayout from "./BaseLayout.astro";
import LikesCounter from "../components/LikeCounter.astro";

type Props = {
    frontmatter: any;
    num_of_likes: number;
    slug: string;
}

const { frontmatter, num_of_likes, slug } = Astro.props;
---

<style>
    span{
        font-family: monospace;
        font-style: normal;
        font-size: 15px;
    }

    .twitter {
        font-size: 14px;
        margin-bottom: 11px;
    }
</style>

<BaseLayout pageTitle={frontmatter.title} pageDescription={frontmatter.description}>
    <div>
        <span
            >{
                frontmatter.pubDate.toLocaleDateString("fr-FR", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                })
            }</span
        >
    </div>
    <slot />
    <p style="margin-bottom: 10px">--</p>
    <a href="https://komments.cloud/f33a9f84501f84954f4cfc" class="commentaires" target="_blank"> Laisser un commentaire ðŸ’¬ </a>
    <!-- <div class="twitter">Envie d'en discuter ? <a href="https://twitter.com/serupan_2">Rendez-vous sur Twitter ðŸ’¬</a></div> -->
    <div class="tags">
        {frontmatter.tags.map((tag) => (
          <a href={`/tags/${tag}`}>#{tag} </a>
        ))}
    </div>
    <LikesCounter num_of_likes={num_of_likes} title={slug}/>
</BaseLayout>
